}

__copyTo() {
   __decoratorCheck  "${FUNCNAME[0]}" "${BASH_SOURCE[0]}" "$@"
   declare -i returnValue=0
   local class="$2"
   if (( $# == 4 )) || (( $# == 5 )); then
      local this="$1"
      local argobject="$4"
      local argclass
      argclass="$("${argobject}".getClass 2>/dev/null)"
      if (( $? == 0 )); then
         if [[ "$("$this".getClass)" == "$argclass" ]]; then
            # start
            local machine="$("$this".getSshHostName)"
            local user="$("$this".getSshHostUser)"
            declare -i port="$("$this".getSshHostPort)"
            local file="$3"
            # target 
            local targetMachine="$("$argobject".getSshHostName)"
            local targetUser="$("$argobject".getSshHostUser)"
            declare -i targetPort="$("$argobject".getSshHostPort)"
            local targetFile="${5:-$file}"

            local bool="$(Boolean.TRUE)"
            cmd1="cd -- \"$(dirname -- "$file")\" && tar -cf - \"$(basename -- "$file")\" 2>/dev/null"
            cmd2="cd -- \"$targetFile\" && tar -xf - 2>/dev/null"

            ssh -p "${port}" "${user}"@"${machine}"  "$(echo $cmd1)" | ssh -p "${targetPort}" "${targetUser}"@"${targetMachine}" "$(echo $cmd2)"
            for status in ${PIPESTATUS[@]}; do
               #echo "stati are ${PIPESTATUS[@]}"
               if (( "$status" != 0 )); then
                  bool="$(Boolean.FALSE)"
                  break
               fi
            done
            
            if [[ "$(Boolean.parseBoolean "$bool")" == "$(Boolean.TRUE)" ]]; then
               Boolean.TRUE
            else
               Boolean.FALSE
            fi
            return $returnValue
         fi
         __throw "WrongClassException" ": Illegal argument: \"${argobject}\": $("$argobject".getClass)"
         returnValue=$?
         __stackOrHelp "$2" "${FUNCNAME:2}"
         return $returnValue
      else
         __throw "IllegalArgumentException" ": Illegal argument: \"${argobject}\" is no object"
         returnValue=$?
         __stackOrHelp "$2" "${FUNCNAME:2}" 
         return $returnValue
      fi
   fi
   __throw "IllegalArgumentException" ": Wrong number of arguments $(($#-2))"
   returnValue=$?
   __stackOrHelp "${class}" "${FUNCNAME:2}"
   return $returnValue
}

